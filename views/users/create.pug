extends ../layouts/common.pug

block content
    h1.mt-5 Create user

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="/users/create", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Họ tên
            input#name.form-control(name="name", type="text", value=values ? values.name : "")
        
        .form-group
            label(for="email") Email
            input#email.form-control(name="email", type="text", value=values ? values.email : "")
        
        .form-group
            label(for="password") Mật khẩu
            input#password.form-control(name="password", type="password", value=values ? values.password : "")
        
        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(name="avatar", type="file")

        button.btn.btn-primary Create
